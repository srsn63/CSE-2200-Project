<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>

<BorderPane style="-fx-background-color: linear-gradient(to right, #4b0000, #8b0000, #b22222);" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/23.0.1" fx:controller="com.example.app1.AdminDashboardController">
    <center>
        <TableView fx:id="usersTable" prefWidth="600.0" style="-fx-background-color: linear-gradient(to right, #4b0000, #8b0000, #b22222);">
            <columns>
                <TableColumn fx:id="idColumn" prefWidth="50.0" text="ID" />
                <TableColumn fx:id="usernameColumn" prefWidth="200.0" text="Username" />
                <TableColumn fx:id="emailColumn" prefWidth="250.0" text="Email" />
                <TableColumn fx:id="statusColumn" prefWidth="100.0" text="Status" />
            </columns>
        </TableView>
    </center>
    <bottom>
        <HBox alignment="CENTER_RIGHT" spacing="10.0" style="-fx-background-color: linear-gradient(to right, #4b0000, #8b0000, #b22222);">
            <padding>
                <Insets bottom="10" left="10" right="10" top="10" />
            </padding>
            <Button fx:id="approveButton" onAction="#approveUser" style="-fx-background-color: linear-gradient(to right, #00008b, #87ceeb); -fx-text-fill: white;" text="Approve Selected User" />
            <Button fx:id="deleteButton" onAction="#deleteUser" style="-fx-background-color: linear-gradient(to right, #00008b, #87ceeb); -fx-text-fill: white;" text="Delete Selected User" />
            <Button fx:id="back_button" onAction="#backbuttonOnAction" style="-fx-background-color: linear-gradient(to right, #00008b, #87ceeb); -fx-text-fill: white;" text="Back" />
        </HBox>
    </bottom>
</BorderPane>
