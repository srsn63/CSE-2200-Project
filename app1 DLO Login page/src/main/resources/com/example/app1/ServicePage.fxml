<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.app1.ServicePageController">
    <VBox spacing="10.0" alignment="CENTER" layoutX="50.0" layoutY="50.0" prefWidth="700.0">
        <HBox spacing="10.0" alignment="CENTER_LEFT">
            <Label fx:id="serviceNameLabel" text="Service Name" style="-fx-font-size: 24px; -fx-text-fill: white;" />
            <Button text="Add Profile" onAction="#addProfile" style="-fx-background-color: #4CAF50; -fx-text-fill: white;" />
        </HBox>
        <ListView fx:id="profilesListView" prefHeight="400.0" prefWidth="700.0" />
    </VBox>
</AnchorPane>
