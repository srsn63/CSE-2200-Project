<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<VBox alignment="CENTER" fillWidth="false" prefHeight="600.0" prefWidth="800.0" spacing="20.0" stylesheets="@Style.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.app1.HelloController">
   <padding>
      <Insets bottom="0" left="0" right="0" top="0" />
   </padding>
   <BorderPane prefHeight="600.0" prefWidth="800.0" style="-fx-background-color: linear-gradient(to bottom, #1c1c1c, #3a3a3a);">
      <right>
         <AnchorPane prefHeight="600.0" prefWidth="415.0" BorderPane.alignment="CENTER">
            <children>
               <Label fx:id="welcomeText12" alignment="CENTER" layoutX="10.0" layoutY="20.0" prefHeight="50.0" prefWidth="380.0" text="Secure Login" textFill="white">
                  <font>
                     <Font name="Verdana Bold Italic" size="28.0" />
                  </font>
                  <effect>
                     <DropShadow offsetX="3" offsetY="3" radius="5" />
                  </effect>
               </Label>
               <Label layoutX="30.0" layoutY="100.0" text="Username" textFill="#cccccc">
                  <font>
                     <Font name="System" size="16.0" />
                  </font>
               </Label>
               <TextField fx:id="username_textfield" layoutX="30.0" layoutY="130.0" prefWidth="340.0" promptText="Enter your username" style="-fx-background-color: #2a2a2a; -fx-text-fill: #ffffff; -fx-border-color: #3a3a3a; -fx-border-radius: 5; -fx-background-radius: 5;">
               </TextField>
               <Label layoutX="30.0" layoutY="180.0" text="Password" textFill="#cccccc">
                  <font>
                     <Font name="System" size="16.0" />
                  </font>
               </Label>
               <PasswordField fx:id="password_field" layoutX="30.0" layoutY="210.0" prefWidth="340.0" promptText="Enter your password" style="-fx-background-color: #2a2a2a; -fx-text-fill: #ffffff; -fx-border-color: #3a3a3a; -fx-border-radius: 5; -fx-background-radius: 5;">
               </PasswordField>
               <Button fx:id="login_Button" layoutX="30.0" layoutY="270.0" mnemonicParsing="false" onAction="#loginButtonOnAction" prefHeight="40.0" prefWidth="340.0" style="-fx-background-color: linear-gradient(to right, #ff7e5f, #feb47b); -fx-text-fill: white; -fx-background-radius: 5;" text="Login" />
               <Button fx:id="cancel_button" layoutX="30.0" layoutY="514.0" mnemonicParsing="false" onAction="#cancel_buttonOnAction" prefHeight="40.0" prefWidth="340.0" style="-fx-background-color: #555555; -fx-text-fill: #ffffff; -fx-background-radius: 5;" text="EXIT">
                  <font>
                     <Font size="18.0" />
                  </font></Button>
               <Label fx:id="login_message_label" alignment="CENTER" contentDisplay="CENTER" layoutX="54.0" layoutY="379.0" prefHeight="30.0" prefWidth="292.0" textFill="#ff4444">
                  <font>
                     <Font size="9.0" />
                  </font></Label>
               <Button fx:id="signup_button" layoutX="30.0" layoutY="319.0" mnemonicParsing="false" onAction="#signupButtonOnAction" prefHeight="40.0" prefWidth="340.0" style="-fx-background-color: linear-gradient(to right, #ff7e5f, #feb47b); -fx-text-fill: white; -fx-background-radius: 5;" text="Sign Up" />
               <Button fx:id="admin_login_button" layoutX="30.0" layoutY="420.0" mnemonicParsing="false" onAction="#adminLoginButtonOnAction" prefHeight="40.0" prefWidth="340.0" style="-fx-background-color: linear-gradient(to right, #ff7e5f, #feb47b); -fx-text-fill: white; -fx-background-radius: 5;" text="Admin Login" />
            </children>
         </AnchorPane>
      </right>
      <center>
         <AnchorPane prefHeight="600.0" prefWidth="515.0" style="-fx-background-color: linear-gradient(to top, #ff7e5f, #feb47b);">
            <children>
               <Label fx:id="welcomeText" alignment="CENTER" layoutX="87.0" layoutY="99.0" prefHeight="40.0" prefWidth="300.0" text="Digital Legacy Organizer" textFill="white">
                  <font>
                     <Font name="Verdana Bold Italic" size="13.0" />
                  </font>
               </Label>
               <Label fx:id="welcomeText1" alignment="CENTER" layoutX="86.0" layoutY="141.0" prefHeight="30.0" prefWidth="300.0" text="Legacy Holder" textFill="white">
                  <font>
                     <Font name="Verdana Bold Italic" size="20.0" />
                  </font>
               </Label>
               <Label fx:id="copyright_label" alignment="CENTER" layoutX="38.0" layoutY="566.0" prefHeight="30.0" prefWidth="386.0" text="Copyright(.c)">
                  <font>
                     <Font name="System Bold" size="20.0" />
                  </font>
               </Label>
               <ImageView fitHeight="800.0" fitWidth="610.0" layoutX="-5.0" layoutY="-7.0" pickOnBounds="true" preserveRatio="true">
                  <image>
                     <Image url="@DLO.png" />
                  </image>
               </ImageView>
            </children>
         </AnchorPane>
      </center>
   </BorderPane>
</VBox>
